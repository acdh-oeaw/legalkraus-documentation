{
  "swagger": "2.0",
  "info": {
    "description": "legalkraus API",
    "version": "1.0.0",
    "title": "legalkraus API",
    "termsOfService": "https://schnitzler-werke.acdh.oeaw.ac.at/imprint.html",
    "contact": {
      "email": "ingo.boerner@oeaw.ac.at"
    },
    "license": {
      "name": "CC-BY",
      "url": "https://creativecommons.org/licenses/by/4.0/"
    }
  },
  "host": "legalkraus.acdh-dev.oeaw.ac.at",
  "basePath": "/api/v1.0",
  "tags": [
    {
      "name": "boehm",
      "description": "Methoden zur Böhm Edition (folgt)"
    },
    {
      "name": "develop",
      "description": "in Entwicklung (experimentell)"
    },
    {
      "name": "stable",
      "description": "bereits implementiert"
    },
    {
      "name": "object",
      "description": "Objekte verwalten"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/about": {
      "get": {
        "tags": [
          "develop"
        ],
        "summary": "Informationen zur API",
        "description": "Liefert API-Dokumentation aus.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/login": {
      "get": {
        "tags": [
          "develop"
        ],
        "summary": "Einloggen",
        "produces": [
          "text/plain"
        ],
        "parameters": [
          {
            "name": "usr",
            "in": "query",
            "description": "Benutzername",
            "required": true,
            "type": "string"
          },
          {
            "name": "pwd",
            "in": "query",
            "description": "Passwort",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/whoami": {
      "get": {
        "tags": [
          "develop"
        ],
        "summary": "Informationen zum eingeloggten Nutzer",
        "produces": [
          "application/xml"
        ],
        "responses": {
          "200": {
            "description": "Informationen zum Nutzer in XML-Fragment"
          }
        }
      }
    },
    "/memberstatus": {
      "get": {
        "tags": [
          "develop"
        ],
        "summary": "Status des eigentloggten Nutzers",
        "description": "Liefert zurück, ob der eingeloggte Nutzer dem legalkraus-Team angehört und daher bearbeiten kann.",
        "produces": [
          "text/plain"
        ],
        "responses": {
          "200": {
            "description": "Rückmeldung zum Status"
          }
        }
      }
    },
    "/object": {
      "get": {
        "tags": [
          "develop",
          "object"
        ],
        "summary": "Dokument abfragen",
        "description": "Liefert das Dokument zurück.",
        "produces": [
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID des Dokuments",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Objekt existiert nicht."
          }
        }
      },
      "post": {
        "tags": [
          "stable",
          "object"
        ],
        "summary": "Dokument anlegen",
        "description": "erzeugt ein neues Dokument basierend auf der Materialübersicht und dem OCR-Text.",
        "parameters": [
          {
            "name": "n",
            "in": "query",
            "description": "Signatur des Dokuments. Beispiel: `1.3.`. Achtung: abschließender Punkt ist notwendig!",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Nicht alle Dokumente angelegt. Response beachten!"
          },
          "201": {
            "description": "Dokument(e) angelegt."
          },
          "400": {
            "description": "Nicht erfolgreich. Eventuell fehlt Parameter n."
          },
          "401": {
            "description": "Nutzer ist zum Anlegen von Dokumenten nicht berechtigt."
          },
          "404": {
            "description": "Ungültiger Wert von Parameter n."
          },
          "409": {
            "description": "Nicht erfolgreich. Response beachten: Dokumente existieren bereits."
          }
        }
      },
      "delete": {
        "tags": [
          "stable",
          "object"
        ],
        "summary": "Dokument im Entwurfsstatus löschen",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "Entfernt ein Dokument. Nur möglich bei Objekten, die sich im Entwurfsstatus befinden, d.h. noch nicht manuell bearbeitet wurden.",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Objekt gelöscht."
          },
          "400": {
            "description": "Anfrage nicht korrekt. Parameter id prüfen!"
          },
          "401": {
            "description": "Rechte zum löschen nicht ausreichend."
          },
          "403": {
            "description": "Löschen nicht möglich, weil Dokument nicht im Entwurfsstatus."
          },
          "404": {
            "description": "Dokument existiert nicht."
          },
          "500": {
            "description": "Löschen nicht möglich."
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "Informationen zum Projekt",
    "url": "https://www.oeaw.ac.at/acdh/projects/karl-kraus-legal-papers/"
  }
}